{% extends 'base.html.twig' %}

{% block title %}
	Mot de passe oublié
{% endblock %}

{% block stylesheets %}
	<link rel="icon" sizes="70x70" type="image/webp" href="{{ asset('images/swordphish 70x70.jpg') }}">
{% endblock %}

{% block body %}
	{% for error in app.flashes('error') %}
		<div class="alert alert-danger text-center" role="alert">
			{{ error }}
		</div>
	{% endfor %}
	<form method="post" class="container mt-4">
		<h1>Mot de passe oublié</h1>
		<fielset class="pt-4 mb-4">
			<label for="emailAdmin" class="form-label required">Saisissez votre email pour pouvoir saisir un nouveau mot de passe</label>
			<input type="email" name="emailAdmin" id="emailAdmin" class="form-control" required autofocus>
		</fielset>
		<fieldset class="mt-4 mb-4">
			<button class="btn btn-lg btn-primary" name="submitEmail" type="submit">
				Envoyer
			</button>
		</fieldset>
	</form>
{% endblock %}
