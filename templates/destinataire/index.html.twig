{% extends 'base.html.twig' %}

{% block title %}Hello DestinataireController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ id_destinataire }} from {{ controller_name }}! ✅</h1>
    <p>
        Votre navigateur est : {{ nav }} <br>
        Votre adresse IP est : {{ ip }} <br>
        Votre nom d'hôte est : {{ host }} <br>
        Votre nom de session est : {{ username }} <br>
    </p>
    <p id="js"></p>
    
</div>
{% endblock %}
