{% extends 'base.html.twig' %}

{% block title %}Tentez de gagner des places de cinéma!
{% endblock %}

{% block stylesheets %}
	<link rel="icon" sizes="70x70" type="image/webp" href="{{ asset('images/cinema-ticket 70x70.png') }}">
	<link rel="stylesheet" href="{{ asset('css/abalone.css') }}">
	<link href="https://fonts.googleapis.com/css2?family=Fira+Sans+Extra+Condensed:wght@300;400;500;700&display=swap" rel="stylesheet">
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/info_visiteur.js') }}" defer></script>
{% endblock %}

{% block header %}
    {% include './partials/header_abalone.html.twig' %}
{% endblock %}

{% block body %}

	<div class="container mt-4">
		<h1>GAGNEZ DES TICKETS DE CINEMA
			<img src="{{ asset('images/cinema-ticket 70x70.png') }}" alt="Ticket de cinéma"/></h1>
		<p>
			Plus vite vous envoyez le formulaire ci-dessous, plus de chance
			        vous aurez à gagner vos tickets.
		</p>
		<h2>Nombre de tickets restants disponibles : 10</h2>
		<p class="text-muted">
			<span class="asterisk">*</span>
			champ requis</p>
		<form name="form_destinataire" method="POST" class="card-body">
			<fieldset class="mb-4">
				<label for="lastname" class=" form-label required">
					*Nom
				</label>
				<input type="text" id="lastname" name="lastname" required class="form-control required" maxlength="255"/>
			</fieldset>

			<fieldset class="mb-4">
				<label for="firstname" class=" form-label required">
					*Prénom
				</label>
				<input type="text" id="firstname" name="firstname" required class="form-control required" maxlength="255"/>
			</fieldset>

			<fieldset class="mb-4">
				<label for="telephone" class=" form-label required">
					*Téléphone
				</label>
				<input type="tel" id="telephone" name="telephone" pattern="^([0-9]{10}){1}$" required class="form-control required" maxlength="255"/>
			</fieldsetclass="mb-4">

			<fieldset class="mb-4">
				<label for="email" class=" form-label required">
					*Email
				</label>
				<input type="email" id="email" name="email" required class="form-control required" maxlength="255"/>
			</fieldset>

			<fieldset class="mb-4">
				<label for="tickets" class=" form-label required">
					*Nombre de tickets
				</label>
				<input type="text" id="tickets" name="tickets" required class="form-control required" maxlength="1"/>
			</fieldset>

			<fieldset class="mb-4 text-center">
				<button type="submit" name="submit" class="btn btn-success btn-lg ">
					Participez !
				</button>
			</fieldset>
		</form>

		<div>
			{# {{ form(form_destinataire) }} #}
		</div>

		

	</div>
{% endblock %}

{% block footer %}
    {% include './partials/footer_abalone.html.twig' %}
{% endblock %}